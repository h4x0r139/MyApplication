<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/custom_song_icon"
        android:layout_width="@dimen/height_notify"
        android:layout_height="@dimen/height_notify"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/ll_custom_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/btn_custom_play"
            style="@style/btn_custom_style"
            android:scaleType="center"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/notify_btn_play"
            android:layout_marginRight="15dp"
            />

        <ImageButton
            android:id="@+id/btn_custom_next"
            style="@style/btn_custom_style"
            android:scaleType="center"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/notify_btn_next"

            />

        <ImageButton
            android:id="@+id/btn_custom_close"
            style="@style/btn_custom_style"
            android:scaleType="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@mipmap/notify_close"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:layout_toLeftOf="@id/ll_custom_button"
        android:layout_toRightOf="@id/custom_song_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/NotificationTitle"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="这是歌名1这是歌名1这是歌名1这是歌名1这是歌名1"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:textAppearance="@style/NotificationText"
            android:text="作者1作者1作者1作者1作者1作者1作者1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>
