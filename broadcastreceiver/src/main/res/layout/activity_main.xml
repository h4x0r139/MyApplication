<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Button
        android:id="@+id/btnDynamicBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickDynamicBroadcast"
        android:text="动态注册广播" />

    <Button
        android:id="@+id/btnLocalBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickLocalBroadcast"
        android:textAllCaps="false"
        android:text="通过LocalBroadcastManager发送本地广播" />


    <Button
        android:id="@+id/btnThreadBroadcast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickThreadBroadcast"
        android:textAllCaps="false"
        android:text="子线程发送广播" />
</LinearLayout>
