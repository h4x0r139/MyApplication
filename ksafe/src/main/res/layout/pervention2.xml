<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical" >

    <TextView
        style="@style/title_text_style"
        android:text="开启防盗保护" />

    <ImageView
        android:layout_width="280dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_marginTop="15dip"
        android:background="@drawable/kn_protect_guide_first" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:text="1 设置防盗密码"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="8dip"
            android:text="输入密码"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_pervention_pwd"
            android:layout_width="180dip"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:password="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dip"
            android:layout_height="30dip"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="8dip"
            android:text="确认密码"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_pervention_password"
            android:layout_width="180dip"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:password="true" />
    </LinearLayout>

    <Button
        android:onClick="next"
        android:id="@+id/bt_pervention_next"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="140dip"
        android:text="下一步" />

</LinearLayout>