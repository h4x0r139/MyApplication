<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/title_text_style"
        android:text="金山手机卫士" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="fill_parent"
        android:layout_height="170dip"
        android:orientation="horizontal" >
        <!--android:background="@drawable/main_bg"-->


        <LinearLayout
            android:layout_width="150dip"
            android:layout_height="170dip"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/rv"
                android:layout_width="120dip"
                android:layout_height="120dip" >

                <ImageView
                    android:id="@+id/iv_main"
                    android:layout_width="120dip"
                    android:layout_height="120dip"
                    android:background="@drawable/main_status_baohu"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/iv_cache"
                    android:layout_width="60dip"
                    android:layout_height="60dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/check_sweep"
                    android:scaleType="fitXY"
                    android:visibility="invisible" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="65dip"
                android:gravity="center"
                android:text="建议进行一键体检\n了解手机是否健康"
                android:textSize="15sp"
                android:typeface="monospace" />

            <Button
                android:id="@+id/bt_main"
                android:layout_width="115dip"
                android:layout_height="40dip"
                android:background="#FF00A6FD"
                android:gravity="center"
                android:onClick="kill_cache"
                android:text="一键体验" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="185dip"
        android:background="@color/background" >

        <ListView
            android:id="@+id/lv_main_item"
            android:layout_width="match_parent"
            android:layout_height="185dip" >
        </ListView>

        <ScrollView
            android:id="@+id/sv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:id="@+id/imageview2"
                android:layout_width="fill_parent"
                android:layout_height="185dip"
                android:background="@color/background"
                android:scaleType="fitXY"
                android:visibility="gone" >
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <include layout="@layout/main_sliding_drawer" />

</LinearLayout>