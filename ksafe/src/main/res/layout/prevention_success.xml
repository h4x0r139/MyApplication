<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/text_gradient"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="8dip"
            android:text="手机防盗"
            android:textSize="20sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:layout_marginLeft="150dip"
            android:layout_marginTop="5dip"
            android:text="帮助" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="135dip"
        android:background="#FFEBECEB"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="80dip"
            android:layout_height="135dip"
            android:layout_marginLeft="10dip"
            android:background="@drawable/kn_protection_lock_open" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="135dip"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="8dip"
                android:text="防盗保护已经开启"
                android:textColor="#ff2E2E00"
                android:textSize="20sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dip"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="8dip"
                android:text="正在保护您的手机"
                android:textColor="#ff2E2E00"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_prevention1_item"
        android:layout_width="fill_parent"
        android:layout_height="240dip" >
    </ListView>

    <Button
        android:onClick="set_Pervention"
        android:textSize="18sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="重新设置防盗界面" />

</LinearLayout>