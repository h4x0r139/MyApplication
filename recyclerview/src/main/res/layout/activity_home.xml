    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="simpleRecyclerView"
        android:text="RecyclerView简单测试" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="waterfallsFlow"
        android:text="RecyclerView瀑布流效果" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="multiLayout"
        android:text="RecyclerView多布局" />

</LinearLayout>
