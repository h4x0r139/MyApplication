<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="cn.yinxm.locationgps.MainActivity">

    <Button
        android:id="@+id/update_location"
        android:onClick="updateLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新定位信息"
        />
    <Button
        app:layout_constraintTop_toBottomOf="@id/update_location"
        android:id="@+id/get_lon_lat"
        android:onClick="getLonLat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取经纬度"

        />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Hello World!" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv"
        />

</android.support.constraint.ConstraintLayout>
