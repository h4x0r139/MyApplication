<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="524px"
              android:layout_height="310px"
              android:background="@drawable/dialog_background"
              android:orientation="vertical"
              android:layout_gravity="center"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70px"
        android:text="您输入的手机号"
        android:textColor="#333333"
        android:textSize="30px"
        android:visibility="visible" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="+8618334786948"
        android:textColor="#333333"
        android:textSize="30px"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="暂未注册,是否立即注册？"
        android:textColor="#333333"
        android:textSize="30px"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70px"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40px"
        android:orientation="horizontal">
        <Button
            android:id="@+id/positiveButton"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:background="@drawable/calcle_button_bg"
            android:text="取消"
            android:textColor="#333333"
            android:textSize="30px" />

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="200px"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:background="@drawable/ok_button_bg"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="30px" />
    </LinearLayout>

</LinearLayout>